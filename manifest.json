{
    "name": "ChuckyRoll Extension",
    "version": "1.0",
	"description": "Crunchyroll QoS Extension",
	"icons": {
		"16": "images/chuckyroll_16.png",
		"32": "images/chuckyroll_32.png",
		"48": "images/chuckyroll_48.png",
		"64": "images/chuckyroll_64.png",
		"128": "images/chuckyroll_128.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
		},
	"permissions": [
		"*://*.crunchyroll.com/*/episode-*",
		"*://static.crunchyroll.com/*",
		"tabs",
		"declarativeContent"
	],
	"content_scripts": [
	{
		"matches": ["*://static.crunchyroll.com/*"],
		"js": ["video_player_script.js"],
		"run_at": "document_end",
		"all_frames": true
	},
	{
		"matches": ["*://*.crunchyroll.com/*/episode-*"],
		"js": ["website_script.js"],
		"run_at": "document_end",
		"all_frames": true}
	],
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/chuckyroll_16.png",
			"32": "images/chuckyroll_32.png",
			"48": "images/chuckyroll_48.png",
			"64": "images/chuckyroll_64.png",
			"128": "images/chuckyroll_128.png"
		}
	},
	"manifest_version": 2
  }